<?xml version="1.0" encoding="utf-8" ?>
<mopup:PopupPage
    x:Class="Dressing_Room.ChangePasswordPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mopup="clr-namespace:Mopups.Pages;assembly=Mopups"
    xmlns:viewmodel="clr-namespace:Dressing_Room.ViewModels"
    Title="ChangePasswordPopup"
    x:DataType="viewmodel:SettingsViewModel"
    Background="#80000000">
    <Border
        BackgroundColor="#E2E2E2"
        HeightRequest="300"
        StrokeShape="RoundRectangle 10,10,10,10"
        WidthRequest="300">
        <VerticalStackLayout Spacing="30">

            <Entry Placeholder=" Current Password" Text="{Binding CurrentPassword}" />
            <Entry Placeholder=" New Password" Text="{Binding NewPassword}" />
            <Entry Placeholder=" New Password, Again" Text="{Binding NewPasswordCheck}" />
            <Border StrokeShape="RoundRectangle 20,20,20,20" BackgroundColor="#012608" WidthRequest="200">
                <Button Command="{Binding ChangePasswordCommand}" Text="Confirm?" HorizontalOptions="Fill" BackgroundColor="#012608"/>
            </Border>
        </VerticalStackLayout>

    </Border>
</mopup:PopupPage>