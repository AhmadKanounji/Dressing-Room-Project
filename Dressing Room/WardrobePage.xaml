<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dressing_Room.WardrobePage"
             Title="Dressing Room"
             BackgroundColor="#E2E2E2"
     
             >
    <ScrollView Margin="0,0,0,0">
        <Grid RowSpacing="34" ColumnSpacing="31"  >

            <Grid.RowDefinitions>
                <RowDefinition Height="53"/>
                <RowDefinition Height="29" />
                <RowDefinition Height="251" />
                <RowDefinition Height="251"/>
                <RowDefinition Height="251"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="181"/>
                <ColumnDefinition Width="181"/>
            </Grid.ColumnDefinitions>

            <StackLayout Spacing="0" >
                <Label Margin="0,0,0,0" Grid.Row="0" Text="Dressing Room"
                       TextColor="#01260A" VerticalOptions="Center"  VerticalTextAlignment="Center" 
                       HorizontalOptions="Start" HorizontalTextAlignment="Center" BackgroundColor="#E2E2E2"  
                       FontSize="20" HeightRequest="53" WidthRequest="392"
                   FontFamily="Quora">

                </Label>
                <Frame HeightRequest="29" WidthRequest="393" BackgroundColor="#01260A" Margin="0,0,0,0"  CornerRadius="0" HorizontalOptions="Start" BorderColor="#01260A">
                    <Label  Grid.Row="1" Text="Wardrobe" TextColor="#E2E2E2" 
                           VerticalOptions="Center" VerticalTextAlignment="Center"  
                           HorizontalOptions="Center"  HorizontalTextAlignment="Center"    
                           FontSize="15" FontFamily="OPTIMA">
                    </Label>
                </Frame>

            </StackLayout>

            <StackLayout  Grid.Row="2" Grid.Column="0" Spacing="0" Margin="45,-50,0,0">

                <Border 
                    HeightRequest="216"
                    Stroke="Transparent"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 20,20,0,0"
                    >
                    <ImageButton Source="outfits.jpg" Aspect="Fill" />
                </Border>
                <Border 
                    StrokeShape="RoundRectangle 0,0,20,20"
                    StrokeThickness="-2"
                    Stroke="Transparent"
                    BackgroundColor="#01260A"
                    HeightRequest="35">

                    <Frame BackgroundColor="#01260A" CornerRadius="0" >

                        <Label Text="Outfits" HorizontalTextAlignment="Center" TextColor="#E2E2E2" FontSize="14" FontAttributes="Bold" VerticalTextAlignment="Center"
                       VerticalOptions="Center" HorizontalOptions="Center" FontFamily="OPTIMA_B">
                        </Label>

                    </Frame>

                </Border>

            </StackLayout>

            <StackLayout  Grid.Row="2" Grid.Column="1" Spacing="0" Margin="0,-50,45,0">

                <Border 
                    HeightRequest="216"
                    Stroke="Transparent"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 20,20,0,0">
                    <ImageButton Source="top.png" Aspect="Fill" />
                </Border>
                <Border 
                    StrokeShape="RoundRectangle 0,0,20,20"
                    StrokeThickness="-2"
                    Stroke="Transparent"
                    BackgroundColor="#01260A"
                    HeightRequest="35">

                    <Frame BackgroundColor="#01260A" CornerRadius="0" >

                        <Label Text="Tops" HorizontalTextAlignment="Center" TextColor="#E2E2E2" FontSize="14" FontAttributes="Bold" VerticalTextAlignment="Center"
                       VerticalOptions="Center" HorizontalOptions="Center" FontFamily="OPTIMA_B">
                        </Label>

                    </Frame>

                </Border>

            </StackLayout>


            <StackLayout  Grid.Row="3" Grid.Column="0" Spacing="0" Margin="45,-50,0,0">

                <Border 
                    HeightRequest="216"
                    Stroke="Transparent"
                    StrokeThickness="-2"
                    StrokeShape="RoundRectangle 20,20,0,0">
                    <ImageButton Source="pant.png" Aspect="Fill" />
                </Border>
                <Border 
                    StrokeShape="RoundRectangle 0,0,20,20"
                    StrokeThickness="-2"
                    Stroke="Transparent"
                    BackgroundColor="#01260A"
                    HeightRequest="35">

                    <Frame BackgroundColor="#01260A" CornerRadius="0" >

                        <Label Text="Pants" HorizontalTextAlignment="Center" TextColor="#E2E2E2" FontSize="14" FontAttributes="Bold" VerticalTextAlignment="Center"
                       VerticalOptions="Center" HorizontalOptions="Center" FontFamily="OPTIMA_B">
                        </Label>

                    </Frame>

                </Border>

            </StackLayout>

            <StackLayout  Grid.Row="3" Grid.Column="1" Spacing="0" Margin="0,-50,45,0">

                <Border 
                    HeightRequest="216"
                    Stroke="Transparent"
                    StrokeThickness="-1"
                    StrokeShape="RoundRectangle 20,20,0,0">
                    <ImageButton Source="shoe.png" Aspect="Fill" />
                </Border>

                <Border 
                    StrokeShape="RoundRectangle 0,0,20,20"
                    StrokeThickness="-2"
                    Stroke="Transparent"
                    BackgroundColor="#01260A"
                    HeightRequest="35">

                    <Frame BackgroundColor="#01260A" CornerRadius="0" >

                        <Label Text="Shoes" HorizontalTextAlignment="Center" TextColor="#E2E2E2" FontSize="14" FontAttributes="Bold" VerticalTextAlignment="Center"
                       VerticalOptions="Center" HorizontalOptions="Center" FontFamily="OPTIMA_B">
                        </Label>

                    </Frame>

                </Border>

            </StackLayout>

            <StackLayout  Grid.Row="4" Grid.Column="0" Spacing="0" Margin="45,-50,0,0">

                <Border 
                    HeightRequest="216"
                    Stroke="Transparent"
                    StrokeThickness="-2"
                    StrokeShape="RoundRectangle 20,20,0,0">
                    <ImageButton Source="jacke.png" Aspect="Fill" />
                </Border>

                <Border 
                    StrokeShape="RoundRectangle 0,0,20,20"
                    StrokeThickness="-2"
                    Stroke="Transparent"
                    BackgroundColor="#01260A"
                    HeightRequest="35">

                    <Frame BackgroundColor="#01260A" CornerRadius="0" >

                        <Label Text="Jackets" HorizontalTextAlignment="Center" TextColor="#E2E2E2" FontSize="14" FontAttributes="Bold" VerticalTextAlignment="Center"
                       VerticalOptions="Center" HorizontalOptions="Center" FontFamily="OPTIMA_B">
                        </Label>

                    </Frame>

                </Border>

            </StackLayout>

            <StackLayout  Grid.Row="4" Grid.Column="2" Spacing="0" Margin="0,-50,45,0">

                <Border 
                    HeightRequest="216"
                    Stroke="Transparent"
                    StrokeThickness="-2"
                    StrokeShape="RoundRectangle 20,20,0,0">
                    <ImageButton Source="accessories.jpg" Aspect="Fill" />
                </Border>

                <Border 
                    StrokeShape="RoundRectangle 0,0,20,20"
                    StrokeThickness="-2"
                    Stroke="Transparent"
                    BackgroundColor="#01260A"
                    HeightRequest="35">

                    <Frame BackgroundColor="#01260A" CornerRadius="0"  >

                        <Label Text="Accessories" HorizontalTextAlignment="Center" TextColor="#E2E2E2" FontSize="14" FontAttributes="Bold" VerticalTextAlignment="Center"
                       VerticalOptions="Center" HorizontalOptions="Center" FontFamily="OPTIMA_B">
                        </Label>

                    </Frame>

                </Border>

            </StackLayout>



        </Grid>
    </ScrollView>

</ContentPage>