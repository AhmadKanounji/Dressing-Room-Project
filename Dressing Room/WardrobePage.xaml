<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dressing_Room.WardrobePage"
             BackgroundColor="#E2E2E2"
             Title="My W"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="#01260A"
             >
    <FlexLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <ScrollView HorizontalOptions="Start" >
            <Grid RowSpacing="34" ColumnSpacing="31" HorizontalOptions="Center" VerticalOptions="Center" >

                <Grid.RowDefinitions>
                    <RowDefinition Height="53"/>
                    <RowDefinition Height="29" />
                    <RowDefinition Height="251" />
                    <RowDefinition Height="251"/>
                    <RowDefinition Height="251"/>
                    <RowDefinition Height="1"/>
                    
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="181"/>
                    <ColumnDefinition Width="181"/>
                </Grid.ColumnDefinitions>

                <StackLayout Spacing="0" >
                    <Label Margin="0,0,0,0" Grid.Row="0" Text="Dressing Room"
                       TextColor="#01260A" VerticalOptions="Center"  VerticalTextAlignment="Center" 
                       HorizontalOptions="Start" HorizontalTextAlignment="Center" BackgroundColor="#E2E2E2"  
                       FontSize="20" HeightRequest="53" WidthRequest="392"
                   FontFamily="Quora">

                    </Label>
                    <Frame HeightRequest="29" WidthRequest="393" BackgroundColor="#01260A" Margin="0,0,0,0"  CornerRadius="0" HorizontalOptions="Start" BorderColor="#01260A">
                        <Label  Grid.Row="1" Text="Wardrobe" TextColor="#E2E2E2" 
                           VerticalOptions="Center" VerticalTextAlignment="Center"  
                           HorizontalOptions="Center"  HorizontalTextAlignment="Center"    
                           FontSize="15" FontFamily="OPTIMA">
                        </Label>
                    </Frame>
                </StackLayout>

                <StackLayout  Grid.Row="2" Grid.Column="0" Spacing="-1" Margin="45,-50,0,0"  >

                    <Border 
                    HeightRequest="216"
                    Stroke="#01260A"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 20,20,0,0"
                    
                    >
                        <ImageButton Source="outfits.jpg" Aspect="Fill"  Clicked="OnImage1Clicked"/>
                    </Border>
                    <Border 
                    StrokeShape="RoundRectangle 0,0,20,20"
                    StrokeThickness="0"
                    Stroke="#01260A"
                    BackgroundColor="#01260A"
                    HeightRequest="35"
                    
                    >

                        <Frame BackgroundColor="#01260A" CornerRadius="0" BorderColor="#01260A" >

                            <Label Text="Outfits" HorizontalTextAlignment="Center" TextColor="#E2E2E2" FontSize="14" FontAttributes="Bold" VerticalTextAlignment="Center"
                       VerticalOptions="Center" HorizontalOptions="Center" FontFamily="OPTIMA_B">
                            </Label>

                        </Frame>

                    </Border>

                </StackLayout>

                <StackLayout  Grid.Row="2" Grid.Column="1" Spacing="-1" Margin="0,-50,46,0" >

                    <Border 
                    HeightRequest="216"
                    Stroke="#01260A"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 20,20,0,0">
                        <ImageButton Source="top.png" Aspect="Fill"  Clicked="OnImage2Clicked" />
                    </Border>
                    <Border 
                    StrokeShape="RoundRectangle 0,0,20,20"
                    StrokeThickness="0"
                    Stroke="#01260A"
                    BackgroundColor="#01260A"
                    HeightRequest="35"
                    >

                        <Frame BackgroundColor="#01260A" CornerRadius="0"  BorderColor="#01260A">

                            <Label Text="Tops" HorizontalTextAlignment="Center" TextColor="#E2E2E2" FontSize="14" FontAttributes="Bold" VerticalTextAlignment="Center"
                       VerticalOptions="Center" HorizontalOptions="Center" FontFamily="OPTIMA_B">
                            </Label>

                        </Frame>

                    </Border>

                </StackLayout>


                <StackLayout  Grid.Row="3" Grid.Column="0" Spacing="-1" Margin="45,-50,0,0">

                    <Border 
                    HeightRequest="216"
                    Stroke="Transparent"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 20,20,0,0">
                        <ImageButton Source="pant.png" Aspect="Fill" Clicked="OnImage3Clicked" />
                    </Border>
                    <Border 
                    StrokeShape="RoundRectangle 0,0,20,20"
                    StrokeThickness="0"
                    Stroke="Transparent"
                    BackgroundColor="#01260A"
                    HeightRequest="35">

                        <Frame BackgroundColor="#01260A" CornerRadius="0" BorderColor="#01260A">

                            <Label Text="Pants" HorizontalTextAlignment="Center" TextColor="#E2E2E2" FontSize="14" FontAttributes="Bold" VerticalTextAlignment="Center"
                       VerticalOptions="Center" HorizontalOptions="Center" FontFamily="OPTIMA_B">
                            </Label>

                        </Frame>

                    </Border>

                </StackLayout>

                <StackLayout  Grid.Row="3" Grid.Column="1" Spacing="-1" Margin="0,-50,45,0">

                    <Border 
                    HeightRequest="216"
                    Stroke="Transparent"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 20,20,0,0">
                        <ImageButton Source="shoe.png" Aspect="Fill" Clicked="OnImage4Clicked"/>
                    </Border>

                    <Border 
                    StrokeShape="RoundRectangle 0,0,20,20"
                    StrokeThickness="0"
                    Stroke="Transparent"
                    BackgroundColor="#01260A"
                    HeightRequest="35">

                        <Frame BackgroundColor="#01260A" CornerRadius="0" BorderColor="#01260A">

                            <Label Text="Shoes" HorizontalTextAlignment="Center" TextColor="#E2E2E2" FontSize="14" FontAttributes="Bold" VerticalTextAlignment="Center"
                       VerticalOptions="Center" HorizontalOptions="Center" FontFamily="OPTIMA_B">
                            </Label>

                        </Frame>

                    </Border>

                </StackLayout>

                <StackLayout  Grid.Row="4" Grid.Column="0" Spacing="-1" Margin="45,-50,0,0">

                    <Border 
                    HeightRequest="216"
                    Stroke="Transparent"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 20,20,0,0">
                        <ImageButton Source="jacke.png" Aspect="Fill" Clicked="OnImage5Clicked"/>
                    </Border>

                    <Border 
                    StrokeShape="RoundRectangle 0,0,20,20"
                    StrokeThickness="0"
                    Stroke="Transparent"
                    BackgroundColor="#01260A"
                    HeightRequest="35">

                        <Frame BackgroundColor="#01260A" CornerRadius="0" BorderColor="#01260A">

                            <Label Text="Jackets" HorizontalTextAlignment="Center" TextColor="#E2E2E2" FontSize="14" FontAttributes="Bold" VerticalTextAlignment="Center"
                       VerticalOptions="Center" HorizontalOptions="Center" FontFamily="OPTIMA_B">
                            </Label>

                        </Frame>

                    </Border>

                </StackLayout>

                <StackLayout  Grid.Row="4" Grid.Column="2" Spacing="-1" Margin="0,-50,45,0">

                    <Border 
                    HeightRequest="216"
                    Stroke="Transparent"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 20,20,0,0">
                        <ImageButton Source="accessories.jpg" Aspect="Fill" Clicked="OnImage6Clicked" />
                    </Border>

                    <Border 
                    StrokeShape="RoundRectangle 0,0,20,20"
                    StrokeThickness="0"
                    Stroke="Transparent"
                    BackgroundColor="#01260A"
                    HeightRequest="35">

                        <Frame BackgroundColor="#01260A" CornerRadius="0" BorderColor="#01260A"  >

                            <Label Text="Accessories" HorizontalTextAlignment="Center" TextColor="#E2E2E2" FontSize="14" FontAttributes="Bold" VerticalTextAlignment="Center"
                       VerticalOptions="Center" HorizontalOptions="Center" FontFamily="OPTIMA_B">
                            </Label>

                        </Frame>

                    </Border>
                </StackLayout>
            </Grid>
        </ScrollView>
        <Border WidthRequest="393" HeightRequest='56' StrokeShape="RoundRectangle 30,30,0,0"  HorizontalOptions="End" Background="#01260A"  Margin="0,500,0,0" StrokeThickness="-1">
            <HorizontalStackLayout Spacing="48"  WidthRequest="393" Margin="35,3,0,0" HeightRequest="36" VerticalOptions="Center">
                <ImageButton Source="homepage2.png" HeightRequest="25" WidthRequest="30">

                </ImageButton>
                <VerticalStackLayout Spacing="2">
                    <ImageButton Source="hanger.png" HeightRequest="25" WidthRequest="30">

                    </ImageButton>
                    <Frame CornerRadius="50" HeightRequest="2" WidthRequest="2">
                        
                    </Frame>
                </VerticalStackLayout>
                
                <Frame CornerRadius="50" Padding="0" HeightRequest="36" WidthRequest="36" BorderColor="#E2E2E2" BackgroundColor="#E2E2E2">
                    <ImageButton Source="plussign.png" HeightRequest="20" WidthRequest="20">

                    </ImageButton>
                </Frame>

                <ImageButton Source="profilepic.png" HeightRequest="25" WidthRequest="30">

                </ImageButton>
                <ImageButton Source="setting.png" HeightRequest="25" WidthRequest="30">

                </ImageButton>
            </HorizontalStackLayout>
        </Border>
    </FlexLayout>
    
    

</ContentPage>