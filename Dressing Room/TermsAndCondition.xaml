                <CheckBox Color="#E2E2E2" HeightRequest="5"></CheckBox>
                <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" VerticalOptions="End">
                    <Border StrokeShape="RoundRectangle 20,20,20,20" HeightRequest="50" WidthRequest="100" StrokeThickness="4">
                        <Button Text="Decline"
                            BackgroundColor="#E2E2E2"
                            BorderColor="#01260A"
                            FontSize="Default"
                            TextColor="#01260A"
                            Clicked="DeclineClicked"
                            >

                        </Button>
                    </Border>
                    <Border StrokeShape="RoundRectangle 20,20,20,20" HeightRequest="50" WidthRequest="100">
